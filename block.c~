#include "block.h"

void SetMino(GROUP* group){
  group -> block[0].shape = I_MINO;
  group -> block[1].shape = J_MINO;
  group -> block[2].shape = L_MINO;
  group -> block[3].shape = S_MINO;
  group -> block[4].shape = Z_MINO;
  group -> block[5].shape = T_MINO;
  group -> block[6].shape = O_MINO;
}

void PrintMino(int mino[4][4]){
  int i,j;
  for(i = 0;i < 4;i++){
    for(j = 0;j < 4;j++){
      if(mino[i][j] == 0) printf(" ");
      else printf("&");
    }
    printf("\n");
  }
}
  
